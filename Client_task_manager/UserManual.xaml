<Window x:Class="Client_task_manager.UserManual"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client_task_manager"
        mc:Ignorable="d"
        Title="User manual"
        MinHeight="480"
        MinWidth="640"
        MaxHeight="1080"
        MaxWidth="1920"
        Icon="./Images/help_information_instruction_icon.ico"
        Loaded="Window_Loaded">
    <Grid Style="{StaticResource GridGradientStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="90*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        
        <TextBox x:Name="instructionTextBox" Grid.Row="0" AcceptsReturn="True" TextWrapping="Wrap" FontSize="18" VerticalScrollBarVisibility="Visible" Margin="10"/>
        
        <Button Grid.Row="1" Content="Go back" Height="30" Margin="10,5,10,5" Click="GoBackButton_Click"/>
    </Grid>
</Window>
